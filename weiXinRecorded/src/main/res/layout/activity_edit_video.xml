<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <RelativeLayout
        android:id="@+id/rl_tuya"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/rl_touch_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <com.zhaoss.weixinrecorded.view.TuyaView
                android:id="@+id/tv_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp" />

            <TextureView
                android:id="@+id/textureView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp" />

            <RelativeLayout
                android:id="@+id/rl_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp">

                <LinearLayout
                    android:id="@+id/ll_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="#dd2B2B2B">

                    <RelativeLayout
                        android:id="@+id/rl_pen"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_pen"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/pen" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_icon"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/icon" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_text"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/text_click" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_speed"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_speed"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/speed" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_cut_size"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/cut_size" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_cut_time"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/cut_time" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:id="@+id/v_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_above="@id/ll_bottom"
                    android:background="#3C3E40" />

                <LinearLayout
                    android:id="@+id/ll_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/v_line"
                    android:background="#dd2B2B2B"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <View
                        android:layout_width="1px"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:background="#3C3E40" />

                    <RelativeLayout
                        android:id="@+id/rl_back"
                        android:layout_width="80dp"
                        android:layout_height="60dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/edit_delete" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_expression"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_above="@id/v_line"
                    android:background="#f4f4f4"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_progress"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_above="@id/v_line"
                    android:background="#dd2B2B2B"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="调整视频播放速度为:"
                            android:textColor="#f4f4f4"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_speed"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="#E8391A"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="倍"
                            android:textColor="#f4f4f4"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/sb_speed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:maxHeight="50dp" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="411dp"
                    android:layout_height="232dp"
                    android:layout_marginStart="-1dp"
                    android:layout_marginTop="344dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="158dp" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#dd2B2B2B">
        <RelativeLayout
            android:id="@+id/rl_close"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/back"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:text="编辑视频"/>
        <TextView
            android:id="@+id/tv_finish_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="14sp"
            android:textColor="#fff"
            android:background="@drawable/yuanjiao"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="完成"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="取消"
            android:textSize="18sp"
            android:textColor="#fff"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#3CAC57"
            android:layout_alignParentRight="true"
            android:text="完成"/>
        <EditText
            android:id="@+id/et_tag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textSize="24sp"
            android:layout_below="@id/tv_finish"
            android:textColor="#fff"
            android:gravity="top"
            android:background="@null"/>
        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_centerInParent="true"
            android:textSize="24sp"
            android:textColor="#fff"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_hint_delete"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#fff"
        android:text="双指可缩放旋转, 拖到此处可删除表情"
        android:background="#dd2B2B2B"
        android:visibility="gone"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>